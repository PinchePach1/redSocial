{
  "openapi": "3.0.4",
  "info": {
    "title": "Red Social en Node JS",
    "description": "Red social en Node JS",
    "version": "1.0.0",
    "contact": {
      "email": "depachvi@gmail.com"
    }
  },
  "servers": [
    {
      "url": "https://localhost:3000/api"
    }
  ],
  "tags": [
    {
      "name": "user",
      "description": "Operaciones relacionadas con los usuarios"
    },
    {
      "name": "auth",
      "description": "Operaciones de autenticación"
    }
  ],
  "paths": {
    "/user": {
      "get": {
        "tags": ["user"],
        "summary": "Lista todos los usuarios",
        "operationId": "listUsers",
        "responses": {
          "200": {
            "description": "Lista de usuarios obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          },
          "default": {
            "description": "Error al obtener la lista de usuarios",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["user"],
        "summary": "Registra o actualiza un usuario",
        "description": "Crea un nuevo usuario o actualiza uno existente si ya existe",
        "operationId": "upsertUserPost",
        "requestBody": {
          "required": true,
          "description": "Datos del usuario a registrar o actualizar",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegister"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuario creado o actualizado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "default": {
            "description": "Error al registrar o actualizar el usuario",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["user"],
        "summary": "Actualiza un usuario existente",
        "description": "Actualiza la información de un usuario existente. Requiere token válido con permiso 'update'.",
        "operationId": "upsertUserPut",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "description": "Datos actualizados del usuario",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegister"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuario actualizado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "401": {
            "description": "No autorizado o token inválido"
          },
          "default": {
            "description": "Error al actualizar usuario",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "tags": ["user"],
        "summary": "Obtiene la información de un usuario por ID",
        "operationId": "getUserById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID del usuario",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Información del usuario obtenida correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "Usuario no encontrado"
          },
          "default": {
            "description": "Error al obtener el usuario",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["auth"],
        "summary": "Inicia sesión de usuario",
        "description": "Verifica las credenciales del usuario y devuelve un token JWT si son válidas.",
        "operationId": "loginUser",
        "requestBody": {
          "required": true,
          "description": "Credenciales del usuario para autenticación",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Inicio de sesión exitoso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "401": {
            "description": "Credenciales inválidas"
          },
          "default": {
            "description": "Error durante el inicio de sesión",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": ["auth"],
        "summary": "Registra un nuevo usuario y devuelve un token JWT",
        "description": "Crea un usuario nuevo con contraseña encriptada (hash) y devuelve el token JWT generado automáticamente.",
        "operationId": "registerUser",
        "requestBody": {
          "required": true,
          "description": "Datos para crear el usuario",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegister"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuario registrado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterResponse"
                }
              }
            }
          },
          "400": {
            "description": "Datos inválidos o usuario ya existente"
          },
          "default": {
            "description": "Error durante el registro",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "description": "Representación de un usuario registrado",
        "properties": {
          "id": {
            "type": "string",
            "example": "64f2a6d5b9f2d2e8c1b2a3f1"
          },
          "name": {
            "type": "string",
            "example": "pach"
          },
          "username": {
            "type": "string",
            "example": "pach"
          }
        }
      },
      "UserRegister": {
        "type": "object",
        "description": "Modelo para registrar o actualizar usuarios",
        "required": ["name", "userName", "password"],
        "properties": {
          "name": {
            "type": "string",
            "example": "pach"
          },
          "username": {
            "type": "string",
            "example": "pach"
          },
          "password": {
            "type": "string",
            "format": "password",
            "example": "123456"
          }
        }
      },
      "Login": {
        "type": "object",
        "description": "Credenciales necesarias para iniciar sesión",
        "required": ["userName", "password"],
        "properties": {
          "username": {
            "type": "string",
            "example": "pach"
          },
          "password": {
            "type": "string",
            "format": "password",
            "example": "123456"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "description": "Respuesta de inicio de sesión exitosa",
        "properties": {
          "message": {
            "type": "string",
            "example": "Inicio de sesión exitoso"
          },
          "token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          },
          "user": {
            "$ref": "#/components/schemas/User"
          }
        }
      },
      "RegisterResponse": {
        "type": "object",
        "description": "Respuesta al registrar un usuario exitosamente",
        "properties": {
          "message": {
            "type": "string",
            "example": "Usuario registrado exitosamente"
          },
          "token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          },
          "user": {
            "$ref": "#/components/schemas/User"
          }
        }
      },
      "Error": {
        "type": "object",
        "description": "Respuesta de error genérica",
        "properties": {
          "code": {
            "type": "string",
            "example": "USER_NOT_FOUND"
          },
          "message": {
            "type": "string",
            "example": "No se encontró el usuario solicitado."
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
